<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/TrendingOfferCard"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#E6F7F7"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo_image"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_40sdp"
                android:padding="@dimen/_10sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/kissam_logo" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_50sdp"
                android:padding="@dimen/_15sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/kissan_jam" />


            <TextView
                android:id="@+id/item_discount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/trending_bg"
                android:fontFamily="@font/robotomono_regular"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="UP TO 20% OFF"
                android:textColor="@color/white"
                android:textSize="10sp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>